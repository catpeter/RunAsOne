<!--pages/location/location/location.wxml-->
<view style='font-size:16px;color:rgba(201,201,201,1);margin-top:20px;'>
  <view class="info_body flex_row_s">
    <view class="info_width">
      <text class="info_title"><text class="type-selected">*</text>地址</text>
      <text>|</text>
    </view>
    <view class="info_content" bindtap='navigateToSearch'>
      <text class="info_remark {{address? 'info_input': 'placeholder2'}}">{{address.address? address.address: '请选择地址'}}</text>
      <text class="weui-select weui-select_in-select-after"></text>
    </view>
  </view>
  <view class="info_body flex_row_a">
    <view class="info_width">
      <text class="info_title"><text class="type-selected_none">*</text>补充</text>
      <text>|</text>
    </view>
    <view class="info_content">
      <textarea name="detail" value="{{detail}}" maxlength="100" cursor-spacing='25' style="width:95%;height:4em;padding-top:10rpx;" placeholder="详细地址（门牌号等）" bindinput="setDetail" class="info_input" placeholder-class="placeholder" />
    </view>
  </view>
</view>
<button class="form_btn" bindtap="setAddress">确定</button>