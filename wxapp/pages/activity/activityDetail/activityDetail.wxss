  margin: 52rpx 0rpx 40rpx 0rpx;
}

.act_image {
  width: 100%;
  height: 318rpx;
}

.act_name {
  text-align: center;
  font-size: 24px;
  font-family: PingFangSC-Medium;
  font-weight: 600;
  color: rgba(0, 0, 0, 1);
  margin-bottom: 14rpx;
}

.act_subtitle {
  text-align: center;
  font-size: 14px;
  font-family: PingFangSC-Regular;
  font-weight: 400;
