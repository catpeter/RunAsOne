/* pages/activity/createActivity/index.wxss */

page {
  background: linear-gradient(180deg, rgba(61, 68, 78, 1) 0%, rgba(21, 31, 43, 1) 100%);
}

.photo_style {
  width: 200rpx;
  height: 200rpx;
}

.info_body {
  font-size: 14px;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(201, 201, 201, 1);
  line-height: 47px;
  margin: 0rpx 30rpx 30rpx 30rpx;
  border-radius: 2px 0px 2px 2px;
  border: 1px solid  rgba(142,142,142,1);
  width: 660rpx;
}

.info_body:hover {
  border: 1px solid rgba(232, 168, 35, 1);
}

.info_input {
  padding-left: 4px;
  font-size: 16px;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(201,201,201,1);
  line-height: 44rpx;
}

.info_title {
  padding: 0rpx 30rpx 0rpx 28rpx;
}

.info_width {
  width: 34%;
}

.info_content {
  width: 66%;
}

.type-selected {
  color: red;
  padding-right: 4rpx;
}

.type-selected_none {
  color: rgba(61, 68, 78, 1);
  padding-right: 4rpx;
}

.info_picker {
  width: 38rpx;
  height: 32rpx;
  float: right;
  padding-right: 30rpx;
  padding-top: 7%;
}
.default {
  padding-left: 5px;
  font-size: 14px;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(142, 142, 142, 1);
  line-height: 20px;
}

slider {
  margin: 0rpx 20rpx;
}