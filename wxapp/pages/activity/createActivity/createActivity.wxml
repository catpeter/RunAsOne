<form bindsubmit="formSubmit">
  <view style="margin-top:20px;">
    <view class="info_body flex_row_s">
      <view class="info_width">
        <text class="info_title"><text class="type-selected">*</text>活动名称</text>
        <text>|</text>
      </view>
      <view class="info_content">
        <input name="tel" value="{{tel}}" class="info_input" type="number" placeholder="请输入活动名称" cursor-spacing='25' maxlength="11" placeholder-class="placeholder" bindblur="setTel" />
      </view>
    </view>
    <view class="info_body flex_row_s">
      <view class="info_width">
        <text class="info_title"><text class="type-selected">*</text>活动时间</text>
        <text>|</text>
      </view>
      <view bindtap="endTap" class="info_content">
        <text class="info_input" wx:if="{{agreementDate}}">{{activityDate}}</text>
        <text class='placeholder' wx:else style="padding-left:14rpx">请选择活动时间</text>
        <image src="{{pickerViewShow ? dateTimeImageCheck : dateTimeImage}}" class="info_picker"></image>
      </view>
    </view>
    <view class="info_body flex_row_s">
      <view class="info_width">
        <text class="info_title"><text class="type-selected">*</text>截至时间</text>
        <text>|</text>
      </view>
      <view bindtap="endTap" class="info_content">
        <text class="info_input" wx:if="{{agreementDate}}">{{activityDate}}</text>
        <text class='placeholder' wx:else style="padding-left:14rpx">请选择截至时间</text>
        <image src="{{pickerViewShow ? dateTimeImageCheck : dateTimeImage}}" class="info_picker"></image>
      </view>
    </view>
    <view class="info_body flex_row_s">
      <view class="info_width">
        <text class="info_title"><text class="type-selected_none">*</text>活动地点</text>
        <text>|</text>
      </view>
      <view class="info_content" bindtap="setAddress">
        <text class="info_input" wx:if="{{address.value}}"></text>
        <text class="default" wx:else>请选择地址</text>
        <!-- <text class="weui-select weui-select_in-select-after"></text> -->
      </view>
    </view>
    <view class="info_body flex_row_s">
      <view class="info_width">
        <text class="info_title"><text class="type-selected_none">*</text>活动人数</text>
        <text>|</text>
      </view>
      <view class="info_content" bindtap="setAddress">
        <slider bindchange="slider2change" step="10" selected-color="#E8A823" block-size="13" show-value="true" max="200"/>
        <!-- <text class="weui-select weui-select_in-select-after"></text> -->
      </view>
    </view>
    <!-- <input name="activityName" value="{{activityName}}" placeholder="请输入活动名称" cursor-spacing='20' />
      <input name="deadLine" value="{{deadLine}}" placeholder="截止日期" cursor-spacing='20' />
      <input name="activityType" value="{{activityType}}" placeholder="活动类型" cursor-spacing='20' />
      <input name="activityDate" value="{{activityDate}}" placeholder="活动时间" cursor-spacing='20' /> -->
