<view>
  <text wx:if="{{activityList.length > 0}}" style="padding-left:20rpx;">近期活动</text>
  <view style='padding-bottom: 32rpx;'>
    <view wx:if="{{activityList.length > 0}}">
      <scroll-view scroll-y="true" wx:if="{{activityList.length > 0}}">
        <view class="scroll-view-item1" wx:key="index" wx:for="{{activityList}}" wx:for-item="activity">
          <view class='list flex_row_s' bindtap='getActivityDetail' data-activity-id="{{activity._id}}">
            <view>
              <image src="/assets/images/test.jpg" style="width:150rpx;height:150rpx;padding-right:10px;"></image>
            </view>
            <view>
              <view style='font-size:18px;font-weight:600;'>
                <text>{{activity.activityName}}</text>
                <text style="padding-left:10px;">{{typeOptions[activity.activityType]}}</text>
              </view>
              <view class='flex_row_s'>
              <text style='color:grey;font-size:14px;'>{{activity.activityDate}}</text>
              <text style='padding-left:10px;color:grey;font-size:14px;width:70px;' class="hidden">{{activity.address.name}}</text>
                </view>
              <text style='color:grey;font-size:14px;' class="status_type {{statusColor[activity.status]}}">{{statusOptions[activity.status]}}</text>
            </view>
          </view>
        </view>
      </scroll-view>
    </view>
    <view wx:else class="no_data_main">
      <view style="text-align: center;">近期无活动</view>
    </view>
  </view>
</view>
