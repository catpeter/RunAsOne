/* pages/main/main.wxss */

page {
  width: 100%;
  height: 100%;
  /* overflow: hidden; */
  color: rgba(61, 68, 78, 1);
  background: rgba(255, 255, 255, 1);
}

.search-wrapper {
  padding: 10px 0;
  width: 100%;
  text-align: center;
}

.side-list {
  display: inline-block;
  margin: 0 5vw;
  height: 30px;
  width: 30px;
  font-size: 25px;
  color: rgba(0, 0, 0, 1);
  font-family: PingFangSC-Regular;
  transition: color 0.5s;
}

.search-button {
  display: inline-block;
  margin: 0 auto;
  height: 30px;
  width: 70%;
  border-radius: 5px;
  background-color: rgba(216, 216, 216, 1);
  font-size: 13px;
  line-height: 30px;
  text-align: center;
  vertical-align: top;
}

.page-bottom {
  position: fixed;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  z-index: -1;
  overflow: hidden;
}

.side-list-wrapper {
  width: 40%;
  height: 90%;
  overflow: hidden;
  background-color: rgba(248, 248, 248, 1);
  padding-top: 60px;
  color: rgba(0, 0, 0, 1);
  font-family: PingFangSC-Regular;
}

.list-item {
  margin-top: 5vw;
  margin-left: 5vw;
}

.botton-item1 {
  position: absolute;
  bottom: 5vw;
  left: 5vw;
  font-size: 4vw;
}

.botton-item2 {
  position: absolute;
  bottom: 15vw;
  left: 5vw;
  font-size: 4vw;
}

.slide-image {
  width: 100%;
  height: 100%;
}

.list {
  border-bottom: 1px solid rgba(216, 216, 216, 1);
  height: 238rpx;
  padding-left: 41rpx;
}

.activity_name {
  font-size: 18px;
  font-family: PingFangSC-Medium;
  font-weight: bold;
  color: rgba(0, 0, 0, 1);
  line-height: 52rpx;
}

.activity_date {
  font-size: 14px;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  color: rgba(174, 174, 174, 1);
  line-height: 40rpx;
}

.activity_status {
  font-size: 14px;
  font-family: PingFangSC-Medium;
  font-weight: 600;
  color: rgba(180, 180, 180, 1);
  line-height: 40rpx;
}

.start {
  color: rgba(0, 0, 0, 1);
}


.tab {
  float: left;
  width: 170rpx;
  margin: 0rpx 40rpx;
  text-align: center;
}

.topTabSwiper {
  border-top: 1px solid rgba(229, 229, 229, 1);
  border-bottom: 1px solid rgba(229, 229, 229, 1);
  zoom: 1;
  line-height: 94rpx;
  background: rgba(250, 250, 250, 1);
  box-shadow: 0px -1px 0px 0px rgba(229, 229, 229, 1);
  font-size: 14px;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(130, 130, 130, 1);
}

.topTabSwiper:after {
  content: "";
  clear: both;
  display: block;
}

.tabBorer {
  border-bottom: 3px solid rgba(0, 0, 0, 1);
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(0, 0, 0, 1);
}

.swiper {
  width: 100%;
}

.swiper_con {
  text-align: center;
  width: 100%;
  height: 100%;
  padding: 80rpx 0;
}
