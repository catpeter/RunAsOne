/* pages/main/main.wxss */

page {
  width: 100%;
  height: 100%;
  /* overflow: hidden; */
  color: rgba(61, 68, 78, 1);
  background: rgba(255, 255, 255, 1);
}

.search-wrapper {
  padding: 10px 0;
  width: 100%;
  text-align: center;
}

.side-list {
  display: inline-block;
  margin: 0 5vw;
  height: 30px;
  width: 30px;
  font-size: 25px;
  color: rgba(0, 0, 0, 1);
  font-family: PingFangSC-Regular;
  transition: color 0.5s;
}

.search-button {
  display: inline-block;
  margin: 0 auto;
  height: 30px;
  width: 70%;
  border-radius: 5px;
  background-color: rgba(216, 216, 216, 1);
  font-size: 13px;
  line-height: 30px;
  text-align: center;
  vertical-align: top;
}

.page-bottom {
  position: fixed;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  z-index: -1;
  overflow: hidden;
}

.side-list-wrapper {
  width: 40%;
  height: 90%;
  overflow: hidden;
  background-color: rgba(248, 248, 248, 1);
  padding-top: 60px;
  color: rgba(0, 0, 0, 1);
  font-family: PingFangSC-Regular;
}

.list-item {
  margin-top: 5vw;
  margin-left: 5vw;
}

.botton-item1 {
  position: absolute;
  bottom: 5vw;
  left: 5vw;
  font-size: 4vw;
}

.botton-item2 {
  position: absolute;
  bottom: 15vw;
  left: 5vw;
  font-size: 4vw;
}

.status_type {
  border-radius: 20rpx;
  font-size: 12px;
  padding: 0rpx 24rpx;
  font-family: PingFang-SC-Regular;
  font-weight: 400;
  line-height: 50rpx;
}

.A {
  color: rgba(71, 123, 222, 1);
  background: rgba(227, 241, 255, 1);
}

.B {
  color: rgba(94, 183, 76, 1);
  background: rgba(225, 248, 215, 1);
}

.C {
  color: rgba(130, 97, 228, 1);
  background: rgba(240, 230, 255, 1);
}

.D {
  color: rgba(94, 183, 76, 1);
  background: rgba(225, 248, 215, 1);
}

.E {
  color: rgba(255, 105, 106, 1);
  background: rgba(255, 105, 106, 0.2);
}

.F {
  color: rgba(13, 167, 180, 1);
  background: rgba(13, 164, 189, 0.2);
}

.list {
  border-bottom: 1px solid rgba(216, 216, 216, 1);
  margin: 6rpx 0rpx;
  padding: 22rpx 40rpx;
  /* border-radius: 20rpx; */
}
