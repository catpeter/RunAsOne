/* pages/user.wxss */
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.userinfo-image {
  margin-bottom: 16rpx;
  width: 200rpx;
  height: 200rpx;
  margin: 0 auto;
  border-radius: 50%;
  display: flex;
  overflow: hidden;
}