/**index.wxss**/
page{
  width: 100%;
  height: 100%;
  overflow: hidden;
  background: linear-gradient(180deg,rgba(61,68,78,1) 0%,rgba(21,31,43,1) 100%);
}

.search-wrapper {
  position: fixed;
  top: 0;
  left: 0;
  padding: 10px 0;
  width: 100%;
  z-index: 1;
  transition: background-color .5s;
  background-color: rgba(250, 250, 250,1);
}

.side-list{
  display: inline-block;
  margin: 0 5vw;
  height: 30px;
  width: 30px;
  font-size: 25px;
  color: rgba(0,0,0,1);
  font-family:PingFangSC-Regular;
  transition: color .5s;
}
.search-button {
  display: inline-block;
  margin: 0 auto;
  height: 30px;
  width: 70%;
  border-radius: 5px;
  background-color: rgba(216, 216, 216, 1);
  font-size: 13px;
  line-height: 30px;
  text-align: center;
  vertical-align: top;
}

.page-bottom{
  position: fixed;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  z-index: -1;
  overflow: hidden;
}

.side-list-wrapper {
  width: 40%;
  height: 90%;
  overflow: hidden;
  background-color: rgba(248, 248, 248,1);
  padding-top: 60px;
  color: rgba(0,0,0,1);
  font-family:PingFangSC-Regular;
}

.list-item{
  margin-top: 5vw;
  margin-left: 5vw;
}
.botton-item1{
  position: absolute;
  bottom: 5vw;
  left: 5vw;
  font-size: 4vw;
}
.botton-item2{
  position: absolute;
  bottom: 15vw;
  left: 5vw;
  font-size: 4vw;
}